@{
    ViewData["Title"] = "New Review";
}
@model ReviewViewModel
<div class="wrapper">
    <h1>Write a new review</h1>
    <form asp-controller="Review" asp-action="SubmitReview" method="post">
        <div class="input_field">
            <span asp-validation-for="reviewer"></span>
            <label asp-for="reviewer"></label>
            <input type="text" asp-for="reviewer" />
        </div>
        <div class="input_field">
            <span asp-validation-for="restaurant"></span>
            <label asp-for="restaurant"></label>
            <input type="text" asp-for="restaurant" />
        </div>
        <div class="input_field">
            <span asp-validation-for="review"></span>
            <label asp-for="review"></label>
            <textarea asp-for="review"></textarea>
        </div>
        <div class="input_field">
            <span asp-validation-for="visit_date"></span>
            <label asp-for="visit_date"></label>
            <input type="date" asp-for="visit_date" />
        </div>
        <div class="input_field">
            <span asp-validation-for="stars"></span>
            <label asp-for="stars"></label>
            <select asp-for="stars">
                <option value="1 star">1</option>
                <option value="2 stars">2</option>
                <option value="3 stars">3</option>
                <option value="4 stars">4</option>
                <option value="5 stars">5</option>
            </select>
        </div>
        <input type="submit" value="Submit" />
    </form>
</div>